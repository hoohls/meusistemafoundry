<div class="clube-ataque-resultado">
  <div class="ataque-header">
    <h3>⚔️ {{atacante}} ataca!</h3>
    <div class="arma-info">
      <strong>{{arma}}</strong>
      {{#if propriedades.length}}
      <span class="propriedades">({{join propriedades ", "}})</span>
      {{/if}}
    </div>
  </div>

  <div class="ataque-dados">
    <div class="rolagem-ataque">
      <h4>Rolagem de Ataque</h4>
      <div class="resultado {{#if acertou}}sucesso{{else}}falha{{/if}}">
        <span class="total">{{ataqueRoll.total}}</span>
        <span class="vs">vs</span>
        <span class="defesa">Defesa {{defesa}}</span>
      </div>
    </div>

    {{#if acertou}}
    <div class="rolagem-dano">
      <h4>Dano</h4>
      <div class="dano-resultado">
        <span class="dano-total">{{danoRoll.total}}</span>
        <span class="dano-tipo">pontos de dano</span>
      </div>
      {{#if alvo}}
      <div class="alvo-info">
        <small>{{alvo}} recebeu {{danoRoll.total}} de dano</small>
      </div>
      {{/if}}
    </div>
    {{else}}
    <div class="ataque-errou">
      <h4>❌ Errou!</h4>
      <p>O ataque não conseguiu atravessar as defesas do alvo.</p>
    </div>
    {{/if}}
  </div>
</div>

